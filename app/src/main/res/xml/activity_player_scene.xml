<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/ll_sliding"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint android:id="@+id/fcv_player_list"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ll_sliding"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_sliding" />
        <Constraint android:id="@+id/cl_top_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            android:alpha="1"/>
        <Constraint android:id="@+id/cl_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />
        <Constraint android:id="@+id/cl_small_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/cl_top_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cl_top_view"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/img_album_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_rectangle"
            app:layout_constraintBottom_toTopOf="@+id/cl_default"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_top_view"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/ll_sliding"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_top_view" />
        <Constraint android:id="@+id/fcv_player_list"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_sliding"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Constraint android:id="@+id/img_album_cover"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/cl_top_view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
        <Constraint android:id="@+id/cl_top_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            android:alpha="0"/>
        <Constraint android:id="@+id/cl_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />
        <Constraint android:id="@+id/cl_small_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/cl_top_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cl_top_view"
            android:alpha="1"/>
    </ConstraintSet>

    <Transition
        app:motionInterpolator="easeOut"
        app:duration="100"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start" >
        <OnSwipe
            motion:dragDirection="dragUp"
            app:touchRegionId="@+id/ll_sliding" />
        <KeyFrameSet >
            <KeyAttribute
                app:motionTarget="@+id/cl_top_view"
                app:framePosition="60"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/cl_small_view"
                app:framePosition="90"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/cl_default"
                app:framePosition="60"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>
    <Transition
        app:motionInterpolator="easeOut"
        app:duration="100"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start" >
        <OnSwipe
            motion:dragDirection="dragUp"
            app:touchRegionId="@+id/fcv_player_list" />
        <KeyFrameSet >
            <KeyAttribute
                app:motionTarget="@+id/cl_top_view"
                app:framePosition="60"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/cl_small_view"
                app:framePosition="90"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/cl_default"
                app:framePosition="60"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
